<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       default-lazy-init="false"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="robotraderDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/robotrader"/>
        <property name="username" value="robotrader"/>
        <property name="password" value="robotrader"/>
        <property name="maxActive" value="10"/>
    </bean>
    
    <bean id="sqlUtil" class="com.robotrader.core.util.sql.SqlUtilImpl">
        <property name="dataSource" ref="robotraderDataSource"/>
    </bean>
     
    <bean id="jaxbUtil" class="com.robotrader.core.util.jaxb.JAXBUtilImpl"/>
     
    <!--JMS Configuration-->
    <bean id="amqConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
    </bean>
     
    <bean id="jmsConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">   
        <constructor-arg index="0" ref="amqConnectionFactory"/>
        <property name="sessionCacheSize" value="100" />
    </bean>
</beans>
