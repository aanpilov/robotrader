<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"       
       default-lazy-init="false"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <osgi:service id="sqlUtilService" ref="sqlUtil" auto-export="interfaces"/>
    
    <osgi:service id="jmsConnectionFactoryService" ref="jmsConnectionFactory" interface="javax.jms.ConnectionFactory"/>
    
    <osgi:service id="jaxbUtilService" ref="jaxbUtil" auto-export="interfaces"/>
    
    <osgi:service id="robotraderDataSourceService" ref="robotraderDataSource" interface="javax.sql.DataSource"/>

</beans>
